Host *
	ForwardAgent yes
	ForwardX11 yes
	ForwardX11Trusted yes
	CheckHostIP yes
	NoHostAuthenticationForLocalhost yes
	IdentityFile ~/.ssh/id_dsa
	IdentityFile ~/.ssh/id_rsa
	IdentityFile ~/.ssh/identity
	SendEnv LANG LC_*
	HashKnownHosts no
	Compression yes
	ServerAliveInterval 30

Host *.shishnet.org
	User shish
	ControlMaster auto
	ControlPath ~/.ssh/mux-%r@%h:%p
	ControlPersist 3600
